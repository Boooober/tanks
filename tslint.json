{
    "extends": [
        "tslint:recommended",
        "tslint-config-airbnb"
    ],
    "rulesDirectory": [
        "lint-rules/"
    ],
    "rules": {
        "align": false,
        "no-unused-expressions": false,
        "constructor-params": true,
        "indent": [
            true,
            "spaces"
        ],
        "max-line-length": [
            true,
            120
        ],
        "quotemark": {
            "options": [
                "single",
                "avoid-escape"
            ]
        },
        "trailing-comma": {
            "options": {
                "multiline": "never"
            }
        },
        "interface-name": [true, "never-prefix"],
        "semicolon": [true, "always"],
        "ordered-imports": false,
        "object-literal-sort-keys": false,
        "object-curly-spacing": true,
        "no-empty": { "severity": "warning" },
        "member-access": false,
        "prefer-object-spread": true,
        "prefer-method-signature": true,
        "arrow-return-shorthand": [true, "multiline"],
        "no-unnecessary-callback-wrapper": true,
        "space-before-function-paren": {
            "options": {
                "anonymous": "never",
                "asyncArrow": "always",
                "constructor": "never",
                "method": "never",
                "named": "never"
            }
        },
        "whitespace": {
            "options": [
                "check-branch",
                "check-decl",
                "check-operator",
                "check-separator",
                "check-type",
                "check-typecast"
            ]
        },
        "ter-indent": [
            true,
            4,
            {
                "SwitchCase": 1,
                "FunctionDeclaration": {
                    "parameters": 1,
                    "body": 1
                },
                "FunctionExpression": {
                    "parameters": "first",
                    "body": 1
                },
                "MemberExpression": 1,
                "CallExpression": {
                    "arguments": "first"
                }
            }
        ],
        "typedef": {
            "severity": "error",
            "options": [
                true,
                "parameter",
                "call-signature",
                "arrow-parameter",
                "property-declaration",
                "member-variable-declaration"
            ]
        },
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            },
            {
                "call-signature": "onespace",
                "index-signature": "onespace",
                "parameter": "onespace",
                "property-declaration": "onespace",
                "variable-declaration": "onespace"
            }
        ]
    }
}
